        "z": "f88c014770fffa18",
        "name": "Format Drivers Table",
        "func": "try {\n    const standings = msg.payload.MRData.StandingsTable.StandingsLists[0].DriverStandings;\n    \n    // const top10 = standings.slice(0, 10);\n    \n    msg.payload = standings.map(driver => ({\n        \"Pos\": driver.position,\n        \"Driver\": `${driver.Driver.givenName} ${driver.Driver.familyName}`,\n        \"Nationality\": driver.Driver.nationality,\n        \"Team\": driver.Constructors[0].name,\n        \"Points\": driver.points,\n        \"Wins\": driver.wins\n    }));\n    \n    flow.set(\"driversData\", msg.payload);\n    \n    return msg;\n} catch(error) {\n    node.error(\"Error formatting driver data: \" + error.message, msg);\n    return null;\n}",
