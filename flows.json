        "id": "ea2f8085fb69a3fa",
        "type": "function",
        "z": "f88c014770fffa18",
        "name": "Format Constructors Table",
        "func": "try {\n    const standings = msg.payload.MRData.StandingsTable.StandingsLists[0].ConstructorStandings;\n    \n    const top5 = standings.slice(0, 5);\n    \n    // chart.js Format\n    const labels = top5.map(c => c.Constructor.name);\n    const data = top5.map(c => parseInt(c.points));\n    \n    msg.payload = [{\n        series: [\"Points\"],\n        data: [data],\n        labels: labels\n    }];\n    \n    flow.set(\"constructorsData\", standings);\n    \n    return msg;\n} catch(error) {\n    node.error(\"Error formatting constructor data: \" + error.message, msg);\n    return null;\n}",
